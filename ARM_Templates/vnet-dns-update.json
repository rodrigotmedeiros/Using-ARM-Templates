{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vmADPrivateIp": {
            "type": "string",
            "metadata": {
                "description": "Gets the vm-ad's private IP address and set as static."
            }
        },
        "vnetName": {
            "type": "string",
            "metadata": {
                "description": "VNET's name."
            }
        },
        "subnetServersName": {
            "type": "string",
            "metadata": {
                "description": "Servers' subnet's name."
            }
        },
        "subnetClientName": {
            "type": "string",
            "metadata": {
                "description": "Client's subnet's name."
            }
        }
    },
    "functions": [],
    "variables": {},
    "resources": [
        {
            "name": "[parameters('vnetName')]",
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2019-11-01",
            "location": "[resourceGroup().location]",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "10.0.0.0/16"
                    ]
                },
                "subnets": [
                    {
                        "name": "[parameters('subnetServersName')]",
                        "properties": {
                            "addressPrefix": "10.0.0.0/24"
                        }
                    },
                    {
                        "name": "[parameters('subnetClientName')]",
                        "properties": {
                            "addressPrefix": "10.0.1.0/24"
                        }
                    }
                ],
                "dhcpOptions": {
                    "dnsServers": [
                        "10.0.0.4"
                    ]
                }
            }
        }
    ],
    "outputs": {}
}