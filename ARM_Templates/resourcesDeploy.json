{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "publicIpAddress": {
            "type": "string",
            "metadata": {
                "description": "Fetch the public IP address and add a NSG rule to allow RDP connection only from that IP."
            }
        },
        "adminUsername": {
            "type": "string",
            "metadata": {
                "description": "Admin's username."
            }
        },
        "adminPassword": {
            "type": "securestring",
            "metadata": {
                "description": "Password for local admin account."
            }   
        },
        "vnetName": {
            "type": "string",
            "metadata": {
                "description": "VNET's name."
            }
        },
        "subnetServersName": {
            "type": "string",
            "metadata": {
                "description": "Servers' subnet's name."
            }
        },
        "subnetClientName": {
            "type": "string",
            "metadata": {
                "description": "Client's subnet's name."
            }
        },
        "vmADName": {
            "type": "string",
            "metadata": {
                "description": "AD VM's name."
            }
        },
        "vmADSize": {
            "type": "string",
            "metadata": {
                "description": "VM size."
            }
        },
        "vmIISName": {
            "type": "string",
            "metadata": {
                "description": "IIS VM's name."
            }
        },
        "vmIISSize": {
            "type": "string",
            "metadata": {
                "description": "VM size"
            }
        },
        "vmClientSize": {
            "type": "string",
            "metadata": {
                "description": "VM size"
            }
        },
        "vmClientName": {
            "type": "string",
            "metadata": {
                "description": "Client's name."
            }
        },
        "nsgName": {
            "type": "string",
            "metadata": {
                "description": "Network Security Group's name."
            }
        }
    },
    "functions": [],
    "variables": {
        "vmADNICName": "[concat(parameters('vmADName'), '-', 'nic')]",
        "vmADPIP": "[concat(parameters('vmADName'),'-', 'pip')]",
        "vmIISNICName": "[concat(parameters('vmIISName'), '-', 'nic')]",
        "vmIISPIP": "[concat(parameters('vmIISName'),'-', 'pip')]",
        "vmClientNicName": "[concat(parameters('vmClientName'), '-', 'nic')]",
        "vmClientPIP": "[concat(parameters('vmClientName'),'-', 'pip')]"
    },
    "resources": [
        {
            "name": "[parameters('nsgName')]",
            "type": "Microsoft.Network/networkSecurityGroups",
            "apiVersion": "2019-11-01",
            "location": "[resourceGroup().location]",
            "properties": {
                "securityRules": [
                    {
                        "name": "RDP_ALLOW",
                        "properties": {
                            "description": "Only allow RDP from the client public IP address.",
                            "protocol": "Tcp",
                            "sourcePortRange": "*",
                            "destinationPortRange": "3389",
                            "sourceAddressPrefix": "[parameters('publicIpAddress')]",
                            "destinationAddressPrefix": "*",
                            "access": "Allow",
                            "priority": 160,
                            "direction": "Inbound"
                        }
                    },
                    {
                        "name": "HTTP_ALLOW",
                        "properties": {
                            "description": "Only allow RDP from the client public IP address.",
                            "protocol": "Tcp",
                            "sourcePortRange": "*",
                            "destinationPortRange": "3389",
                            "sourceAddressPrefix": "[parameters('publicIpAddress')]",
                            "destinationAddressPrefix": "*",
                            "access": "Allow",
                            "priority": 170,
                            "direction": "Inbound"
                        }
                    }
                ]
            }
        },
        {
            "name": "[parameters('vnetName')]",
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2019-11-01",
            "location": "[resourceGroup().location]",
            "dependsOn":[
                "[resourceId('Microsoft.Network/networkSecurityGroups', parameters('nsgName'))]"
            ],
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "10.0.0.0/16"
                    ]
                },
                "subnets": [
                    {
                        "name": "[parameters('subnetServersName')]",
                        "properties": {
                            "addressPrefix": "10.0.0.0/24",
                            "networkSecurityGroup": {
                                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', parameters('nsgName'))]"
                            }
                        }
                    },
                    {
                        "name": "[parameters('subnetClientName')]",
                        "properties": {
                            "addressPrefix": "10.0.1.0/24",
                            "networkSecurityGroup": {
                                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', parameters('nsgName'))]"
                            }
                        }
                    }
                ]
            }
        },
        {
            "name": "[variables('vmADPIP')]",
            "type": "Microsoft.Network/publicIPAddresses",
            "apiVersion": "2019-11-01",
            "location": "[resourceGroup().location]",
            "properties": {
                "publicIPAllocationMethod": "Dynamic"
            }
        },
        {
            "name": "[variables('vmADNICName')]",
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2019-11-01",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualNetworks', parameters('vnetName'))]",
                "[resourceId('Microsoft.Network/publicIPAddresses', variables('vmADPIP'))]"
            ],
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipConfig1",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "publicIPAddress": {
                                "id": "[resourceId('Microsoft.Network/publicIPAddresses', variables('vmADPIP'))]"
                            },
                            "subnet": {
                                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('vnetName'), parameters('subnetServersName'))]"
                            }
                        }
                    }
                ]
            }
        },
        {
            "name": "[parameters('vmADName')]",
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2019-07-01",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkInterfaces', variables('vmADNICName'))]"
            ],
            "properties": {
                "hardwareProfile": {
                    "vmSize": "[parameters('vmADSize')]"
                },
                "osProfile": {
                    "computerName": "[parameters('vmADName')]",
                    "adminUsername": "[parameters('adminUsername')]",
                    "adminPassword":"[parameters('adminPassword')]"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "MicrosoftWindowsServer",
                        "offer": "WindowsServer",
                        "sku": "2019-Datacenter",
                        "version": "latest"
                    },
                    "osDisk": {
                        "name": "[concat(parameters('vmADName'), '-', 'disk')]",
                        "caching": "ReadWrite",
                        "createOption": "FromImage"
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('vmADNICName'))]"
                        }
                    ]
                }
            }
        },
        {
            "name": "[variables('vmIISPIP')]",
            "type": "Microsoft.Network/publicIPAddresses",
            "apiVersion": "2019-11-01",
            "location": "[resourceGroup().location]",
            "properties": {
                "publicIPAllocationMethod": "Dynamic"
            }
        },
        {
            "name": "[variables('vmIISNICName')]",
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2019-11-01",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualNetworks', parameters('vnetName'))]",
                "[resourceId('Microsoft.Network/publicIPAddresses', variables('vmIISPIP'))]",
                "[resourceId('Microsoft.Network/networkInterfaces', variables('vmADNICName'))]"
            ],
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipConfig1",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            
                            "publicIPAddress": {
                                "id": "[resourceId('Microsoft.Network/publicIPAddresses', variables('vmIISPIP'))]"
                            },
                            "subnet": {
                                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('vnetName'), parameters('subnetServersName'))]"
                            }
                        }
                    }
                ]
            }
        },
        {
            "name": "[parameters('vmIISName')]",
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2019-07-01",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkInterfaces', variables('vmIISNICName'))]"
            ],
            "properties": {
                "hardwareProfile": {
                    "vmSize": "[parameters('vmIISSize')]"
                },
                "osProfile": {
                    "computerName": "[parameters('vmIISName')]",
                    "adminUsername": "[parameters('adminUsername')]",
                    "adminPassword":"[parameters('adminPassword')]"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "MicrosoftWindowsServer",
                        "offer": "WindowsServer",
                        "sku": "2019-Datacenter",
                        "version": "latest"
                    },
                    "osDisk": {
                        "name": "[concat(parameters('vmIISName'), '-', 'disk')]",
                        "caching": "ReadWrite",
                        "createOption": "FromImage"
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('vmIISNICName'))]"
                        }
                    ]
                }
            }
        }
    ],
    "outputs": {
        "vmADPrivateIp": {
            "type": "string",
            "value": "[reference(variables('vmADNICName')).ipConfigurations[0].properties.privateIPAddress]"
        }
    }
}